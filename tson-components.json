    "schemas": {
      "SyncSuccess": {
        "type": "object",
        "properties": {
          "message": { "type": "string" }
        },
        "example": {
          "message": "Sync Success"
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "title": { "type": "string" },
          "price": { "type": "number" },
          "category": { "type": "string" },
          "description": { "type": "string" },
          "image": { "type": "string" }
