        "example": {
          "id": 1,
          "customer": "Johe Doe",
          "total": 10,
          "created_at": "2025-08-22T12:34:56Z",
          "items": {
            "product_id": 1,
            "quantity": 2,
            "product_name": "Pen",
            "product_price": 5
          }
